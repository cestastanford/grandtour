.container.main-view(ng-show="entry")
    .row
        .col-lg-12
            .edit-status.alert.alert-warning
                .edit-status-entry-index
                    span Editing Entry Index: 
                    a.alert-link(ng-click="editingIndex = true", ng-show="!editingIndex") {{ $stateParams.id }}
                    .input-group.input-group-sm(ng-show="editingIndex")
                        input.form-control(type="text", ng-model="newIndex")
                        span.input-group-btn
                            a.btn.btn-default(ng-href="#/entries/{{newIndex}}/edit") Go

                
                .btn-group.btn-group-sm(role="group")
                    
                    a.btn.btn-default(
                        type="button",
                        ng-href="#/entries/{{ entry.index }}",
                    ) Done Editing

                    button.btn.btn-warning(
                        type="button",
                        ng-click="!unsavedChanges || reverting ? null : revertChanges()",
                        ng-class="{ disabled: !unsavedChanges || reverting }"
                    ) {{ reverting ? 'Reverting...' : 'Revert Changes' }}
                
                    button.btn.btn-info(
                        type="button",
                        ng-click="!unsavedChanges || saving ? null : saveChanges()",
                        ng-class="{ disabled: !unsavedChanges || saving }"
                    ) {{ saving ? 'Saving...' : 'Save Changes' }}

    br
    h1
        entry-field(
            field-key="fullName",
            template="full-name",
        )
        
        a.pull-right(ng-href="#/entries/{{next}}/edit")
            i.fa.fa-angle-right.margin-left
        
        a.pull-right(ng-href="#/entries/{{previous}}/edit")
            i.fa.fa-angle-left

    .row
        div.col-lg-3.entry-info
            .row
                


                entry-field.col-lg-12.col-md-4.col-sm-6(
                    ng-repeat="fieldKey in [ 'alternateNames', 'dates', 'places', 'parents', 'marriages', 'mistress', 'pursuits', 'occupations', 'military', 'education', 'societies', 'exhibitions', 'mentionedNames' ]",
                    field-key="{{ fieldKey }}",
                    template="object",
                )


                
