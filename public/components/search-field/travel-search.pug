.form-group
    label Travel
    input.input-sm.form-control(
        type="text", 
        ng-model="travelModel.place",
        placeholder="place ({{ counts.travel_place }} entries)",
        ng-class="{ filled : travelModel.place }"
        typeahead="item for item in getSuggestions('travels.place', $viewValue)"
        typeahead-focus-first="false" typeahead-min-length="2", typeahead-wait-ms="100"
        typeahead-on-select="search()",
    )

    .query-type-chooser
        span.date-query-type(
            ng-click="resetTravelSearch(false)",
            ng-class="{ selected: !travelModel.date.range }",
        ) exact date
        
        span.date-query-type(
            ng-click="resetTravelSearch(true)",
            ng-class="{ selected: travelModel.date.range }",
        ) range of dates
    
    input.input-sm.form-control.margin-top(
        type="number", 
        ng-model="travelModel.date.year",
        placeholder="year ({{ counts.travel_year }} entries)",
        ng-class="{ filled : travelModel.date.year }",
        ng-show="!travelModel.date.range",
    )
    
    input.input-sm.form-control.margin-top(
        type="number", 
        ng-model="travelModel.date.month",
        placeholder="month ({{ counts.travel_month }} entries)",
        ng-class="{ filled : travelModel.date.month }",
        ng-show="!travelModel.date.range",
    )
    
    input.input-sm.form-control.margin-top(
        type="number", 
        ng-model="travelModel.date.startYear",
        placeholder="start year ({{ counts.travel_year }} entries)",
        ng-class="{ filled : travelModel.date.startYear }",
        ng-show="travelModel.date.range"
    )
    
    input.input-sm.form-control.margin-top(
        type="number", 
        ng-model="travelModel.date.startMonth",
        placeholder="start month ({{ counts.travel_month }} entries)",
        ng-class="{ filled : travelModel.date.startMonth }",
        ng-show="travelModel.date.range",
    )
    
    input.input-sm.form-control.margin-top(
        type="number", 
        ng-model="travelModel.date.endYear",
        placeholder="end year ({{ counts.travel_year }} entries)",
        ng-class="{ filled : travelModel.date.endYear }",
        ng-show="travelModel.date.range",
    )
    
    input.input-sm.form-control.margin-top(
        type="number", 
        ng-model="travelModel.date.endMonth",
        placeholder="end month ({{ counts.travel_month }} entries)",
        ng-class="{ filled : travelModel.date.endMonth }",
        ng-show="travelModel.date.range",
    )

    .specified-by-chooser
        span include travels specified in the dictionary by 
        span.btn-group.list-option
          button.btn.btn-default.btn-xs.dropdown-toggle(type="button", data-toggle="dropdown")
            span {{ travelModel.date.specifiedBy }}
            span.caret
          ul.dropdown-menu
            li(ng-repeat="option in [ 'year', 'month', 'day' ]")
              a(ng-click="travelModel.date.specifiedBy = option", ng-class="{ 'bg-info' : travelModel.date.specifiedBy === option }") {{ option }}
